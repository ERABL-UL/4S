RUN pip3 install \
    scikit-learn \
    matplotlib \
    numpy \
    open3d \
    plyfile \
    pytorch-lightning==1.1.8 \
    tensorboard \
    tensorboard-plugin-wit \
    torch \
    torchvision \
    tqdm \
    h5py \ 
    ninja \
    protobuf \
    pandas \
    setuptools \
    hdbscan


